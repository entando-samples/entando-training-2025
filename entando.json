{
    "microservices": [
        {
            "name": "expense-management",
            "stack": "spring-boot",
            "healthCheckPath": "/actuator/health",
            "dbms": "postgresql",
            "commands": {
                "run": "mvn spring-boot:run -Dspring-boot.run.profiles=dev",
                "build": "mvn verify --no-transfer-progress"
            },
            "roles": [
                "expense-admin",
                "expense-user"
            ]
        }
    ],
    "microfrontends": [
        {
            "name": "expense-form",
            "customElement": "expense-form",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "buildFolder": "dist",
            "titles": {
                "en": "expense-form",
                "it": "expense-form"
            },
            "apiClaims": [
                {
                    "name": "expense-api",
                    "type": "internal",
                    "serviceName": "expense-management"
                }
            ]
        },
        {
            "name": "expense-list",
            "customElement": "expense-list",
            "stack": "angular",
            "type": "widget",
            "group": "free",
            "publicFolder": "public",
            "buildFolder": "dist",
            "titles": {
                "en": "expense-list",
                "it": "expense-list"
            },
            "apiClaims": [
                {
                    "name": "expense-api",
                    "type": "internal",
                    "serviceName": "expense-management"
                }
            ],
            "configMfe": "expense-list-config",
            "params": [
                {
                    "name": "role",
                    "description": "The role of the user"
                }
            ]
        },
        {
            "name": "expense-list-config",
            "customElement": "expense-list-config",
            "stack": "angular",
            "buildFolder": "dist",
            "type": "widget-config",
            "group": "free",
            "publicFolder": "public"
        },
        {
            "name": "angular-epc",
            "customElement": "angular-epc",
            "stack": "angular",
            "type": "app-builder",
            "slot": "content",
            "group": "free",
            "publicFolder": "public",
            "paths": ["angular-epc"],
            "nav": [
                {
                    "label": {
                        "en": "YOUR ANGULAR EPC",
                        "it": "LA TUA EPC ANGULAR"
                    },
                    "target": "internal", 
                    "url": "/angular-epc"
                }
            ],
            "buildFolder": "dist"
        }
    ],
    "svc": [
        "expense-postgresql",
        "expense-keycloak"
    ],
    "name": "expense-bundle",
    "version": "0.0.10",
    "description": "expense-bundle description",
    "type": "bundle"
}